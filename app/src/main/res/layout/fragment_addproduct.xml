<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_fragmentAddProduct_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fragmentAddProduct_layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/cardviewTitleBackground"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/cardviewTitleBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:text="@string/addProduct"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/img_fragmentAddProduct_question"/>
                    <ImageView
                        android:id="@+id/img_fragmentAddProduct_question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/question_mark"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_fragmentAddProduct_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cv_fragmentAddProduct_layoutTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/con_fragmentAddProduct_video"
                android:layout_marginTop="16dp">
                <ImageView
                    android:id="@+id/img_fragmentAddProduct_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/camera_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/img_fragmentAddProduct_product"
                    app:layout_constraintStart_toStartOf="@id/img_fragmentAddProduct_product"
                    app:layout_constraintEnd_toEndOf="@id/img_fragmentAddProduct_product"
                    android:text="@string/productimage"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/img_fragmentAddProduct_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/con_fragmentAddProduct_image"
                app:layout_constraintStart_toStartOf="@id/con_fragmentAddProduct_image"
                app:layout_constraintEnd_toEndOf="@id/con_fragmentAddProduct_image"
                android:layout_marginTop="32dp"
                android:visibility="gone"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/con_fragmentAddProduct_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/con_fragmentAddProduct_image"
                app:layout_constraintBottom_toBottomOf="@id/con_fragmentAddProduct_image"
                app:layout_constraintStart_toEndOf="@id/con_fragmentAddProduct_image"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/img_fragmentAddProduct_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/add_video_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/img_fragmentAddProduct_video"
                    app:layout_constraintEnd_toEndOf="@id/img_fragmentAddProduct_video"
                    app:layout_constraintTop_toBottomOf="@id/img_fragmentAddProduct_video"
                    android:text="@string/product_video"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_productCat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toTopOf="@id/sp_fragmentAddProduct_productCat"
                app:layout_constraintBottom_toBottomOf="@id/sp_fragmentAddProduct_productCat"
                android:textColor="@color/black"
                android:text="@string/cat_product"
                android:layout_marginStart="16dp"
                android:textSize="16sp"/>
            <com.tiper.MaterialSpinner
                android:id="@+id/sp_fragmentAddProduct_productCat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.7"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/img_fragmentAddProduct_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_fragmentAddProduct_productCat"
                android:layout_marginStart="32dp"/>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_subCat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toTopOf="@id/sp_fragmentAddProduct_subCatProduct"
                app:layout_constraintBottom_toBottomOf="@id/sp_fragmentAddProduct_subCatProduct"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="@string/sp_fragmentAddProduct_subCat"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <com.tiper.MaterialSpinner
                android:id="@+id/sp_fragmentAddProduct_subCatProduct"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintStart_toStartOf="@id/sp_fragmentAddProduct_productCat"
                app:layout_constraintEnd_toEndOf="@id/sp_fragmentAddProduct_productCat"
                app:layout_constraintTop_toBottomOf="@id/sp_fragmentAddProduct_productCat"
                android:layout_marginTop="32dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fragmentAddProduct_productFarsiName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintTop_toBottomOf="@id/sp_fragmentAddProduct_subCatProduct"
                app:layout_constraintStart_toStartOf="@id/sp_fragmentAddProduct_productCat"
                app:layout_constraintEnd_toEndOf="@id/sp_fragmentAddProduct_productCat"
                android:layout_marginTop="32dp"

                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fragmentAddProduct_productFaName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:hint="@string/farsi"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_productName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_weight="0.3"
                app:layout_constraintTop_toTopOf="@id/til_fragmentAddProduct_productFarsiName"
                app:layout_constraintBottom_toBottomOf="@id/til_fragmentAddProduct_productFarsiName"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/productName"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fragmentAddProduct_productEnglishName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/til_fragmentAddProduct_productFarsiName"
                app:layout_constraintStart_toStartOf="@id/til_fragmentAddProduct_productFarsiName"
                app:layout_constraintEnd_toEndOf="@id/til_fragmentAddProduct_productFarsiName"
                app:errorEnabled="true"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fragmentAddProduct_productEnglishName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:hint="@string/english"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fragmentAddProduct_productArabicName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/til_fragmentAddProduct_productEnglishName"
                app:layout_constraintStart_toStartOf="@id/til_fragmentAddProduct_productEnglishName"
                app:layout_constraintEnd_toEndOf="@id/til_fragmentAddProduct_productEnglishName"
                app:errorEnabled="true"
                android:layout_marginTop="16dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fragmentAddProduct_productArabicName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:hint="@string/arabic"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chk_fragmentAddProduct_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/til_fragmentAddProduct_productArabicName"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/sales_checkbox_value"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chk_fragmentAddProduct_sales"
                app:layout_constraintEnd_toStartOf="@id/til_fragmentAddProduct_price"
                android:layout_marginStart="16dp"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="32dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fragmentAddProduct_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/txt_fragmentAddProduct_price"
                app:layout_constraintBottom_toBottomOf="@id/txt_fragmentAddProduct_price"
                app:layout_constraintStart_toEndOf="@id/txt_fragmentAddProduct_price"
                app:layout_constraintEnd_toStartOf="@id/txt_fragmentAddProduct_percentSales"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fragmentAddProduct_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:padding="10dp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_percentSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precent_sale"
                app:layout_constraintTop_toTopOf="@id/til_fragmentAddProduct_price"
                app:layout_constraintBottom_toBottomOf="@id/til_fragmentAddProduct_price"
                app:layout_constraintStart_toEndOf="@id/til_fragmentAddProduct_price"
                app:layout_constraintEnd_toStartOf="@id/til_fragmentAddProduct_percentSales"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fragmentAddProduct_percentSales"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/txt_fragmentAddProduct_percentSales"
                app:layout_constraintBottom_toBottomOf="@id/txt_fragmentAddProduct_percentSales"
                app:layout_constraintStart_toEndOf="@id/txt_fragmentAddProduct_percentSales"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_fragmentAddProduct_percentSales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txt_fragmentAddProduct_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_fragmentAddProduct_price"
                android:layout_marginTop="64dp"
                android:layout_marginStart="16dp"
                android:text="@string/Description"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@id/edt_fragmentAddProduct_description"/>
            <EditText
                android:id="@+id/edt_fragmentAddProduct_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/txt_fragmentAddProduct_description"
                app:layout_constraintBottom_toBottomOf="@id/txt_fragmentAddProduct_description"
                app:layout_constraintStart_toEndOf="@id/txt_fragmentAddProduct_description"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:id="@+id/btn_fragmentAddProduct_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_fragmentAddProduct_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="16dp"
                android:text="@string/record"
                android:textColor="@color/colorWhite"
                android:background="@color/acceptButton"
                android:textSize="26sp"
                android:paddingEnd="50dp"
                android:paddingStart="50dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>