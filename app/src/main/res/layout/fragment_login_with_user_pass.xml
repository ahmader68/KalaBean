<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pattern_background">


        <EditText
            android:id="@+id/edt_fragmentLoginWithUserPass_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:alpha="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/username"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />




        <EditText
            android:id="@+id/edt_fragmentLoginWithUserPass_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:alpha="0.5"
            android:background="@drawable/shape_radius"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_fragmentLoginWithUserPass_username"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />


    <Button
        android:id="@+id/btn_fragmentLoginWithUserPass_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_fragmentLoginWithUserPass_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/enter"
        android:background="@color/purple"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>