<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_fragmentDefinition_storeKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.tiper.MaterialSpinner
                        android:id="@+id/sp_fragmentDefinition_sotreKind"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:layout_margin="8dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:hint="@string/sp_fragmentDefinition_storeKind"
                        app:layout_constraintEnd_toStartOf="@id/sp_fragmentDefinition_storeName"/>
                    <com.tiper.MaterialSpinner
                        android:id="@+id/sp_fragmentDefinition_storeName"
                        android:layout_width="0dp"
                        android:layout_margin="8dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:hint="@string/sp_fragmentDefinition_storeName"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/sp_fragmentDefinition_sotreKind"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_fragmentDefinition_floorAndName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/cv_fragmentDefinition_storeKind"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.tiper.MaterialSpinner
                        android:id="@+id/sp_fragmentDefinition_floor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="0.5"
                        android:layout_height="wrap_content"
                        android:hint="@string/sp_fragmentDefinition_floor"/>
                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>