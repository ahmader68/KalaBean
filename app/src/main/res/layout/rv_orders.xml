<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shadow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_rvOrder_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txt_rv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/txt_rv_order_time"
        app:layout_constraintStart_toEndOf="@+id/img_rvOrder_image"
        app:layout_constraintTop_toTopOf="@+id/img_rvOrder_image" />

    <TextView
        android:id="@+id/txt_rv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/img_rvOrder_image"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_order_name" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="سفارش"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/img_rvOrder_image"
        app:layout_constraintStart_toEndOf="@+id/img_rvOrder_image"
        app:layout_constraintTop_toBottomOf="@+id/txt_rv_order_time" />

    <TextView
        android:id="@+id/txt_rv_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="TextView"
        android:textColor="@color/colorBlueIcon"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="از"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/txt_rv_order_title"
        app:layout_constraintStart_toEndOf="@+id/txt_rv_order_title"
        app:layout_constraintTop_toTopOf="@+id/txt_rv_order_title" />

    <TextView
        android:id="@+id/txt_rv_order_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="TextView"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9" />
</androidx.constraintlayout.widget.ConstraintLayout>