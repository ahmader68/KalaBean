<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:popupMenuStyle">@style/PopMenu</item>
       <item name="android:textAppearanceSmallPopupMenu">@style/popMenuTextApearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popMenuTextApearanceLarge</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card" parent="CardView">@style/bottom_navigation</style>

    <style name="PopMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/lightDarkBlueText</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="popMenuTextApearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/lightDarkBlueText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="popMenuTextApearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>



</resources>
